<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image.jpg', size: "100x100" %>
        <% end %>

      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to edit_user_path(current_user.id), class: 'btn  btn-outline-secondary btn-block edit-user-btn' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
        <%= form_with model: Book.new do |f| %>
          <div class="field">
            <label>Title</label><br>
            <%= f.text_field :title %>
          </div>
          <div class="field">
            <label>Opinion</label><br>
            <%= f.text_area :body %><br>
          </div>
          <div class="actions">
            <%= f.submit 'Create Book' %>
          </div>
        <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <td>
                <% if user.profile_image.attached? %>
                  <%= image_tag user.profile_image, size: "80x80" %>
                <% else %>
                  <%= image_tag 'no_image.jpg', size: "80x80" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>