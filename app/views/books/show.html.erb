<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <% if @user.profile_image.attached? %>
          <%= image_tag @user.profile_image, size: "100x100" %>
        <% else %>
          <%= image_tag 'no_image.jpg', size: "100x100" %>
        <% end %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <% if user_signed_in? && current_user.id == @book.user_id %>
          <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block edit-user-btn' do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% else %>
          <%= link_to edit_user_path(@book.user_id), class: 'btn btn-outline-secondary btn-block edit-user-btn' do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
        <%= form_with model: Book.new do |f| %>
          <div class="field">
            <label>Title</label><br>
              <%= f.text_field :title %>
          </div>
          <div class="field">
            <label>Opinion</label><br>
            <%= f.text_area :body %><br>
          </div>
          <div class="actions">
            <%= f.submit 'Create Book' %>
          </div>
        <% end %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <% if @user.profile_image.attached? %>
                <%= image_tag @user.profile_image, size: "100x100" %>
              <% else %>
                <%= image_tag 'no_image.jpg', size: "100x100" %>
              <% end %><br>
              <%= link_to user_path(@user) do %>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <% if user_signed_in? && current_user.id == @book.user_id %>
            <td><%= link_to "Edit", edit_book_path(@book)  %></td>
            <td><%= link_to "Destroy", book_path(@book),method: :delete,"data-confirm" => "Are you sure?" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>