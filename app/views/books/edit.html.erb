<% if @book.errors.any? %>
  <span class="red"><%= @book.errors.count %> errors prohibited this obj from being saved:</span>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li class="red"><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <div class="field_with_errors">
            <label for="book_title">Title</label><br>
          </div>
          <div class="field_with_errors">
            <%= f.text_field :title, class:"form-control book_title" %>
          </div>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label><br>
          <div classs="field_with_errors">
            <%= f.text_area :body, class:"form-control book_body" %><br>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit'Update Book', class:"btn btn-success" %>
        </div>
      <% end %>
      <span><%= link_to "Show",book_path(@book) %> | <%= link_to "Back",books_path %></span>
    </div>
  </div>
</div>